
int findHouse(int arr[], int n, int r, int unit) {
    if (arr == nullptr || n == 0) {
        return -1;
    }

    int totalFoodRequired = r * unit;
    int foodTillNow = 0;

    for (int house = 0; house < n; house++) {
        foodTillNow += arr[house];
        if (foodTillNow >= totalFoodRequired) {
            return house + 1;
        }
    }

    return 0;
}
