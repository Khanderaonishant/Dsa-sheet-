
#include <iostream>
#include<string>
using namespace std;
int getLength(char name[])
{
    int count=0;
    for(int i=0;name[i]!= '\0';i++)
    {
        count++;
    }
    return count;
}
string reverseString(char name[])
 {
     for(int i=getLength(name);i>=0;i--)
     {
         cout<<name[i]<<"";
     }
 }

int main() {
    char name[20];
    cout<<"enter name: "<<endl;
    cin>>name;
    cout<<"length: "<<getLength(name)<<endl;
    cout<<"reverse string: "<<reverseString(name);
    
}
